        <TextBox x:Name="txtBoxServer" Text="172.22.123.223,1433" HorizontalAlignment="Left" Margin="80,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" AutomationProperties.HelpText="" GotFocus="txtBoxServer_GotFocus"/>
        <TextBox x:Name="txtBoxDatabase" Text="RET_drReports" HorizontalAlignment="Left" Margin="80,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" AutomationProperties.HelpText="" GotFocus="txtBoxDatabase_GotFocus"/>
        <Label Content="User" Margin="330,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.159,0.049" Height="26" Width="46" HorizontalAlignment="Left"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="330,41,0,0" VerticalAlignment="Top" Height="30" Width="62"/>
