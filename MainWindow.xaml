        <ComboBox x:Name="cmbBoxEndReason"  HorizontalAlignment="Left" Margin="643,342,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cmbBoxCurrency"  HorizontalAlignment="Left" Margin="421,377,0,0" VerticalAlignment="Top" Width="120"/>
        <CheckBox x:Name="checkBoxCardLocked" Content="CardLocked" HorizontalAlignment="Left" Margin="638,393,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBoxBalCCC" HorizontalAlignment="Left" Margin="645,226,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtBoxBalNCC"  HorizontalAlignment="Left" Margin="421,258,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtBoxBalPts"  HorizontalAlignment="Left" Margin="646,262,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtBoxDeposit" HorizontalAlignment="Left" Margin="423,292,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtBoxValidDaydDays" HorizontalAlignment="Left" Margin="643,305,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lbl_ChangeData" Content="Change Data" HorizontalAlignment="Left" Margin="517,100,0,0" VerticalAlignment="Top" Height="47" Width="156" FontFamily="Sans Serif Collection" FontSize="20" />
        <Label Content="Casino Issued" HorizontalAlignment="Left" Margin="328,178,0,0" VerticalAlignment="Top"/>
        <Label Content="Site Issued" HorizontalAlignment="Left" Margin="324,224,0,0" VerticalAlignment="Top"/>
