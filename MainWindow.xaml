        <Label Content="Currency" HorizontalAlignment="Left" Margin="316,374,0,0" VerticalAlignment="Top"/>
        <Label Content="Casino Issued ID" HorizontalAlignment="Left" Margin="553,177,0,0" VerticalAlignment="Top"/>
        <Label Content="Bal CCC" HorizontalAlignment="Left" Margin="552,229,0,0" VerticalAlignment="Top"/>
        <Label Content="Bal PTS" HorizontalAlignment="Left" Margin="549,259,0,0" VerticalAlignment="Top"/>
        <Label Content="Valid Days" HorizontalAlignment="Left" Margin="553,303,0,0" VerticalAlignment="Top"/>
        <Label Content="End Reason" HorizontalAlignment="Left" Margin="553,338,0,0" VerticalAlignment="Top"/>
        <Button Content="Apply Data Changes" HorizontalAlignment="Left" Margin="643,435,0,0" VerticalAlignment="Top" Height="40" Width="118" Click="ButtonApplyChanges_Click"/>
        <TextBox x:Name="txtBoxCardNumberChanges"  HorizontalAlignment="Left" Margin="419,151,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Card Number" HorizontalAlignment="Left" Margin="326,147,0,0" VerticalAlignment="Top"/>
